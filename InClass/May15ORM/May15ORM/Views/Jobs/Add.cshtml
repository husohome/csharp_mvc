@using May15ORM.Models
@model jobs
@{
    this.ViewData["title"] = "新增職缺";
}

<div class="container" style="margin:50px 20px 20px 20px">
    @using (Html.BeginForm("Add", "Jobs", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">職位代碼:@Html.EditorFor(Model => Model.code)</h5>
                <h6 class="color:red">@Html.ValidationMessageFor(Model => Model.code)</h6><br />
                <h5 class="card-title">職位名稱:@Html.EditorFor(Model => Model.name)</h5><br />
                <h6 class="color:red">@Html.ValidationMessageFor(Model => Model.name)</h6><br />
                <h5 class="card-title">薪資範圍:@Html.EditorFor(Model => Model.minsalary)~@Html.EditorFor(Model => Model.maxsalary)</h5><br />
                <h5 class="card-title">工作地點:@Html.EditorFor(Model => Model.joblocation)</h5><br />
                <h5 class="card-title">工作內容:@Html.EditorFor(Model => Model.desc)</h5><br />
            </div>
            <br />
            <div class="btn-group" role="group" aria-label="Basic example">
                <button type="submit" class="btn btn-primary">儲存</button>
                @Html.ActionLink("回上一頁", "Query", "Jobs", null, new { @class = "btn btn-primary", @role = "button" })
            </div>
        </div>
    }
</div>