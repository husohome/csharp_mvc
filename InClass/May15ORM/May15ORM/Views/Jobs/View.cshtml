@using May15ORM.Models
@model jobs

<h2>Edit</h2>

<div class="container">
    @if (Model != null)
    {

        @Html.AntiForgeryToken()
        @Html.HiddenFor(Model => Model.id);
        <div class="card">

            <h5 class="card-title">職位代碼 : @Model.code</h5>
            <h5 class="card-title">職位名稱 : @Model.name)</h5>
            <h5 class="card-title">薪資範圍 : @Model.minsalary) ~ @Model.maxsalary) </h5>
            <h5 class="card-title">工作地點 : @Model.joblocation)</h5>
            <h5 class="card-title">工作內容 : @Model.desc)</h5>

        </div>
        <br />
        <div class="btn-group" role="group" aria-label="Basic example">
            @Html.ActionLink("刪除", "Del", "Jobs", new { id = @Model.id} , new { @class = "btn btn-primary", @role = "button" })
            @Html.ActionLink("回上一頁", "Query", "Jobs", null, new { @class = "btn btn-primary", @role = "button" })
        </div>

    }
    else
    {
        <div class="card" style="width: 18rem;">

            <div class="card-body">
                <h2 class="card-title">查無資料</h2><br />

            </div>

        </div>

    }

</div>